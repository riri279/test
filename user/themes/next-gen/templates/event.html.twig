{% embed 'partials/base.html.twig' %}

{% block content %}

<div class="event-container">

	<section class="event-listing">

		{% if config.plugins.breadcrumbs.enabled %}
			{% include 'partials/breadcrumbs.html.twig' %}
		{% endif %}

		{% include 'partials/event_item.html.twig' with {'event':page.parent, 'truncate':false, 'single':true} %}

	</section>

	{% include 'partials/events_sidebar.html.twig' with {'page':page.parent} %}

</div>
<br>
<br>
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <div class="container-inner">
        
<article class="event-article">

    <header class="event-header">
      <time class="event-date" datetime="{{ page.date|date("c") }}">
          <span class="day">{{ page.header.event.start|date("d") }}</span>
          <span class="month">{{ config.plugins.events.date_format.translate ? 'MONTHS_OF_THE_YEAR'|ta(page.header.event.start|date('n') - 1) : page.header.event.start|date('M') }}</span>
          <span class="time">
              {{ page.header.event.start|date('g:ia') }}&ndash;{{ page.header.event.end|date('g:ia') }}
          </span>
          <span class="year">{{ page.header.event.start|date("Y") }}</span>
      </time>

      {% set image = page.media.images|first %}
      {% if image != null %}
          {{ image.cropZoom(960,320).html }}
      {% endif %}

    </header>
    </article>
      <h4 class="header white-text" id="event-title">{{ page.title }}</h4>
          {#<span class="month">{{ config.plugins.events.date_format.translate ? 'MONTHS_OF_THE_YEAR'|ta(page.header.event.start|date('n') - 1) : page.header.event.start|date('M') }} {{ page.header.event.start|date("d") }},</span>
          <span class="year"> {{ page.header.event.start|date("Y") }}</span>
          <br>
          <span class="time">
              {{ page.header.event.start|date('g:ia') }}&ndash;{{ page.header.event.end|date('g:ia') }}
          </span>#}
          
        <div class="section white-text">
        {{ page.content }}
        <div class="center" style="padding-top: 4em;">
        <a class="s-green waves-effect waves-light btn">volunteer</a>
        <a class="s-green waves-effect waves-light btn">donate</a>
        <a class="s-green waves-effect waves-light btn">sponsor</a>
        </div>
        </div>
  
        </div>
        </div>
  </div>


{% endblock %}
{% endembed %}