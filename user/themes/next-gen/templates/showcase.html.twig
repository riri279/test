{% set projects = page.collection({'items':'@self.children', 'pagination': true, 'limit': 10, 'order': {'by': 'default', 'dir': 'asc'}}) %}
{% embed 'partials/base.html.twig' %}
{% block content %}
<main class="programs">
  <div class="container">
    {% for proj in projects %}
      {% if loop.index is odd %}
      <div class="row">
      <div class="col s6">
        {% for image in proj.media.images %}
          {{ image.html('t', 'project', 'right programs-img responsive-img') }}
        {% endfor %}
      </div>
      <div class="col s6">
        <div class="white-text two-right left">
          <h5><a href="{{ proj.url }}">{{ proj.title }}</a></h5>
          <p>{{ proj.content | truncate(400, true)}}. . . . . .</p>
          <a class="waves-effect waves-light light-blue-text accent-2  hero-learn" href="{{ proj.url }}"><i class="material-icons right">add</i>learn more</a>
        </div>
      </div>
      </div>
      {% else %} 
      <div class="row">
      <div class="col s6">
        <div class="white-text two-right right">
          <h5><a href="{{ proj.url }}">{{ proj.title }}</a></h5>
          <p>{{ proj.content | truncate(400, true) }}. . . . . .</p>
          <a class="waves-effect waves-light light-blue-text accent-2  hero-learn" href="{{ proj.url }}"><i class="material-icons right">add</i>learn more</a>
        </div>
      </div>
      <div class="col s6">
        {% for image in proj.media.images %}
          {{ image.html('t', 'project', 'left programs-img responsive-img') }}
        {% endfor %}
      </div>
      </div>
      {% endif %}
    {% endfor %} 
</main>
{% endblock %}
{% endembed %}

